<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />*@
    @*for holiday.css*@
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/holiday.css@0.9.8" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <ul>
            <li>
                <a asp-area="" asp-page="/Index">Home</a>
            </li>
            <li>
                <a asp-area="" asp-page="/Privacy">Privacy</a>
            </li>
            <partial name="_LoginPartial" />
        </ul>
        
    </header>
    <div>
        <main role="main" >
            @RenderBody()
        </main>
    </div>

    <footer>
            &copy; Sept 2022 - Chinook WebApp - NAIT DMIT2018 Learning Sample (all rights reserved) <a asp-area="" asp-page="/Privacy">Privacy</a>
    </footer>

    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>