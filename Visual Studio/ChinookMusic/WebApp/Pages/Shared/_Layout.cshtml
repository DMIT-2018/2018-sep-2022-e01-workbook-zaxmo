<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
   @* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />*@
    @* for holdiay css*@
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/holiday.css@0.9.8" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApp.styles.css" asp-append-version="true" />

    @RenderSection("CustomCSS", required: false)
</head>
<body>
    <header>
        <nav>
            <ul>
                <li>
                    <a asp-area="" asp-page="/Index">
                    <img src="~/img/ChinookMusicMenuLogo.jpg"
                        alt="Menu Logo image"
                        title="Go to Home" >
                    </a>
                </li>
                <li>
                    <a asp-area="" asp-page="/Index">Home</a>
                </li>
                @*
                    setup a submenu (drop down menu) using holiday.css
                      see holidaycss.js.org

                    start with an li tag
                    within : add a span tag: entry on the menu root
                             add ul tag: starts the drop down menu
                             within : add any number of li  menu
                                       items
                *@
                <li>
                    <span>Samples</span>
                    <ul>
                        <li><a asp-area="" asp-page="/SamplePages/Index">Default Sample Pages Home</a></li>
                        <li><a asp-area="" asp-page="/SamplePages/Controls">Sample Form Controls</a></li>

                    </ul>
                </li>
                <li><a asp-area="" asp-page="/SamplePages/PlaylistManagement">OLTP TRX</a></li>
                <li>
                    <a asp-area="" asp-page="/Privacy">Privacy</a>
                </li>
                <partial name="_LoginPartial" />
            </ul>
   
        </nav>
    </header>
    <div>
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer>
       
        &copy; Sep 2022 - Chinook WebApp - NAIT DMIT2018 Learning Sample
         (all rights reserved)<a asp-area="" asp-page="/Privacy">Privacy</a>
       
    </footer>

    
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>